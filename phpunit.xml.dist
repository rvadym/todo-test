<phpunit
        bootstrap="vendor/autoload.php"
        colors="true"
>
    <testsuites>
        <testsuite name="recruiter">
            <directory suffix=".php">./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
